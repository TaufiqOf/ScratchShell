<UserControl x:Class="ScratchShell.Views.Component.ServerCardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScratchShell.Views.Component" xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ui:Card Width="300" >
            <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <ui:CardAction Command="{Binding EnterServerCommand, Mode=OneWay}">
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0">
                            <StackPanel  Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Server24" FontSize="16"  />
                                <TextBlock Text="{Binding Name}" IsEnabled="True" FontWeight="DemiBold"  FontSize="16" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="{Binding ProtocolType}" Margin="0,0,8,0"  />
                                <TextBlock Text="{Binding Host}" />
                                <TextBlock Text=":" />
                                <TextBlock Text="{Binding Port}" Margin="0,0,8,0" />
                            </StackPanel>
                            <Separator Margin="2" />

                        </StackPanel>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left">

                            <ui:DropDownButton ToolTip="Open Terminal" Margin="0,0,5,0" Width="65" Height="34" 
                                                Icon="{ui:SymbolIcon WindowConsole20}" FontSize="20" FontWeight="Bold">
                                <ui:DropDownButton.Flyout>
                                    <ContextMenu>
                                        <MenuItem Header="Elevated"
                                                        Command="{Binding OpenTerminalCommand}"
                                                        CommandParameter="Elevated" />
                                        <MenuItem Header="Normal"
                                                        Command="{Binding OpenTerminalCommand}"
                                                        CommandParameter="Normal" />
                                    </ContextMenu>
                                </ui:DropDownButton.Flyout>
                            </ui:DropDownButton>

                            <Button ToolTip="Edit" Margin="2" Command="{Binding EditServerCommand, Mode=OneWay}">
                                <ui:SymbolIcon Symbol="Edit24" FontSize="20" />
                            </Button>
                            <Button ToolTip="Make A Copy"  Margin="2" Command="{Binding CopyServerCommand, Mode=OneWay}">
                                <ui:SymbolIcon Symbol="Copy16" FontSize="20" />
                            </Button>
                            <Button ToolTip="Delete" Margin="2" Command="{Binding DeleteServerCommand, Mode=OneWay}">
                                <ui:SymbolIcon Symbol="Delete24" FontSize="20" />
                            </Button>

                        </StackPanel>
                    </Grid>
                </ui:CardAction>
            </StackPanel>
        </ui:Card>
    </Grid>
</UserControl>
