<Page
    x:Class="ScratchShell.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ScratchShell.Views.Pages"
    xmlns:local1="clr-namespace:ScratchShell.Views.Component"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:ScratchShell.ViewModels.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">
    <ui:Card
        Margin="-10"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        VerticalContentAlignment="Top">
        <Grid
            Margin="-10"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid
                Grid.Row="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel
                    Grid.Column="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Orientation="Horizontal">
                    <ui:Button Command="{Binding ViewModel.AddServerCommand, Mode=OneWay}">
                        <ui:SymbolIcon
                            FontSize="20"
                            FontWeight="Bold"
                            Symbol="Add24" />
                    </ui:Button>

                    <ui:DropDownButton
                        Width="65"
                        Height="35"
                        Margin="10,0,0,0"
                        FontSize="25"
                        FontWeight="Bold"
                        Icon="{ui:SymbolIcon WindowConsole20}">
                        <ui:DropDownButton.Flyout>
                            <ContextMenu>
                                <MenuItem
                                    Command="{Binding ViewModel.OpenTerminalCommand}"
                                    CommandParameter="Elevated"
                                    Header="Elevated" />
                                <MenuItem
                                    Command="{Binding ViewModel.OpenTerminalCommand}"
                                    CommandParameter="Normal"
                                    Header="Normal" />
                            </ContextMenu>
                        </ui:DropDownButton.Flyout>
                    </ui:DropDownButton>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ui:TextBox
                        Width="200"
                        ClearButtonEnabled="True"
                        Icon="{ui:SymbolIcon Symbol=Search24}"
                        PlaceholderText="Search..."
                        Text="{Binding ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </Grid>
            <Separator Grid.Row="1" Margin="0,5" />
            <ui:VirtualizingItemsControl
                Grid.Row="2"
                Margin="0,10,0,0"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                ItemsSource="{Binding ViewModel.FilteredServers}"
                VirtualizingPanel.CacheLengthUnit="Item">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:ServerViewModel}">
                        <ItemsControl>
                            <local1:ServerCardControl DataContext="{Binding}" />
                        </ItemsControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ui:VirtualizingItemsControl>
        </Grid>
    </ui:Card>

</Page>
