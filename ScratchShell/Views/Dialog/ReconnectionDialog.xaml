<ui:ContentDialog
    x:Class="ScratchShell.Views.Dialog.ReconnectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dialog="clr-namespace:ScratchShell.Views.Dialog"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Connection Lost"
    MinWidth="400"
    MinHeight="200"
    CloseButtonText="Close Tab"
    PrimaryButtonText="Reconnect">
    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type dialog:ReconnectionDialog}" />
    </ui:ContentDialog.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Icon and main message  -->
        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,15"
            Orientation="Horizontal">
            <ui:SymbolIcon
                Margin="0,0,10,0"
                FontSize="24"
                Foreground="{DynamicResource SystemFillColorCriticalBrush}"
                Symbol="ErrorCircle24" />
            <TextBlock
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="SemiBold"
                Text="Connection Timeout" />
        </StackPanel>

        <!--  Server information  -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock
                x:Name="ServerInfoText"
                FontSize="14"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                Text="Connection to server has timed out."
                TextWrapping="Wrap" />
        </StackPanel>

        <!--  Error details  -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock
                Margin="0,0,0,5"
                FontSize="12"
                FontWeight="SemiBold"
                Text="Error Details:" />
            <TextBlock
                x:Name="ErrorDetailsText"
                FontSize="12"
                FontStyle="Italic"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                Text="The connection has been lost due to network timeout or server unavailability."
                TextWrapping="Wrap" />
        </StackPanel>

        <!--  Options explanation  -->
        <StackPanel Grid.Row="3" VerticalAlignment="Bottom">
            <TextBlock
                Margin="0,0,0,10"
                FontSize="14"
                FontWeight="SemiBold"
                Text="What would you like to do?" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock
                        FontSize="12"
                        FontWeight="SemiBold"
                        Text="Reconnect" />
                    <TextBlock
                        FontSize="11"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="Attempt to reconnect to the server and resume your session"
                        TextWrapping="Wrap" />
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <TextBlock
                        FontSize="12"
                        FontWeight="SemiBold"
                        Text="Close Tab" />
                    <TextBlock
                        FontSize="11"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="Close this connection tab and return to the dashboard"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</ui:ContentDialog>