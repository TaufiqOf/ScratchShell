<ui:ContentDialog
    x:Class="ScratchShell.Views.Dialog.ReconnectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dialog="clr-namespace:ScratchShell.Views.Dialog"
    xmlns:helpers="clr-namespace:ScratchShell.Helpers"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{helpers:Localized Dialog_Reconnect_Title}"
    CloseButtonText="{helpers:Localized Dialog_Reconnect_CloseButton}"
    PrimaryButtonText="{helpers:Localized Dialog_Reconnect_PrimaryButton}">
    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type dialog:ReconnectionDialog}" />
    </ui:ContentDialog.Resources>
    <Grid Width="400" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Icon and main message  -->
        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,8"
            Orientation="Horizontal">
            <ui:SymbolIcon
                Margin="0,0,8,0"
                FontSize="20"
                Foreground="{DynamicResource SystemFillColorCriticalBrush}"
                Symbol="ErrorCircle24" />
            <TextBlock
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="SemiBold"
                Text="{helpers:Localized Dialog_Reconnect_Header}" />
        </StackPanel>

        <!--  Server information  -->
        <TextBlock
            x:Name="ServerInfoText"
            Grid.Row="1"
            Margin="0,0,0,8"
            FontSize="13"
            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
            Text="{helpers:Localized Dialog_Reconnect_DefaultInfo}"
            TextWrapping="Wrap" />

        <!--  Error details (condensed)  -->
        <Expander Grid.Row="2" Header="{helpers:Localized Dialog_Reconnect_ErrorDetailsLabel}">
            <TextBlock
                x:Name="ErrorDetailsText"
                Margin="4"
                FontSize="11"
                FontStyle="Italic"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                Text="{helpers:Localized Dialog_Reconnect_ErrorDetailsDefault}"
                TextWrapping="Wrap" />
        </Expander>
    </Grid>
</ui:ContentDialog>