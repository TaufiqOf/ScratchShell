<ui:ContentDialog
    x:Class="ScratchShell.Views.Dialog.ReconnectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dialog="clr-namespace:ScratchShell.Views.Dialog"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:helpers="clr-namespace:ScratchShell.Helpers"
    Title="{helpers:Localized Dialog_Reconnect_Title}"
    MinWidth="400"
    MinHeight="200"
    CloseButtonText="{helpers:Localized Dialog_Reconnect_CloseButton}"
    PrimaryButtonText="{helpers:Localized Dialog_Reconnect_PrimaryButton}">
    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type dialog:ReconnectionDialog}" />
    </ui:ContentDialog.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Icon and main message  -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15" Orientation="Horizontal">
            <ui:SymbolIcon
                Margin="0,0,10,0"
                FontSize="24"
                Foreground="{DynamicResource SystemFillColorCriticalBrush}"
                Symbol="ErrorCircle24" />
            <TextBlock
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="SemiBold"
                Text="{helpers:Localized Dialog_Reconnect_Header}" />
        </StackPanel>

        <!--  Server information  -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock
                x:Name="ServerInfoText"
                FontSize="14"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                Text="{helpers:Localized Dialog_Reconnect_DefaultInfo}"
                TextWrapping="Wrap" />
        </StackPanel>

        <!--  Error details  -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock
                Margin="0,0,0,5"
                FontSize="12"
                FontWeight="SemiBold"
                Text="{helpers:Localized Dialog_Reconnect_ErrorDetailsLabel}" />
            <TextBlock
                x:Name="ErrorDetailsText"
                FontSize="12"
                FontStyle="Italic"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                Text="{helpers:Localized Dialog_Reconnect_ErrorDetailsDefault}"
                TextWrapping="Wrap" />
        </StackPanel>

        <!--  Options explanation  -->
        <StackPanel Grid.Row="3" VerticalAlignment="Bottom">
            <TextBlock
                Margin="0,0,0,10"
                FontSize="14"
                FontWeight="SemiBold"
                Text="{helpers:Localized Dialog_Reconnect_Question}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock
                        FontSize="12"
                        FontWeight="SemiBold"
                        Text="{helpers:Localized Dialog_Reconnect_ActionReconnect}" />
                    <TextBlock
                        FontSize="11"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="{helpers:Localized Dialog_Reconnect_ActionReconnectDescription}"
                        TextWrapping="Wrap" />
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <TextBlock
                        FontSize="12"
                        FontWeight="SemiBold"
                        Text="{helpers:Localized Dialog_Reconnect_ActionClose}" />
                    <TextBlock
                        FontSize="11"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="{helpers:Localized Dialog_Reconnect_ActionCloseDescription}"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</ui:ContentDialog>