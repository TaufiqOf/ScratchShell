<ui:ContentDialog
    x:Class="ScratchShell.Views.Dialog.PasswordDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ScratchShell.Views.Dialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:helpers="clr-namespace:ScratchShell.Helpers"
    Title="{helpers:Localized UI_Password}"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    CloseButtonText="{helpers:Localized General_Cancel}"
    DefaultButton="Primary"
    PrimaryButtonText="{helpers:Localized General_OK}"
    mc:Ignorable="d">
    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type local:PasswordDialog}" />
    </ui:ContentDialog.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            x:Name="PasswordTextBlock"
            Grid.Row="0"
            Margin="0,0,0,10"
            FontWeight="SemiBold"
            Text="{helpers:Localized Login_Password}" />
        <ui:PasswordBox
            x:Name="PasswordBox"
            Grid.Row="1"
            Width="400"
            Margin="10,0,10,10"
            PasswordChar="*" />
    </Grid>
</ui:ContentDialog>