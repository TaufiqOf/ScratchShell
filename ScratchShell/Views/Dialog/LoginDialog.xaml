<ui:ContentDialog
    x:Class="ScratchShell.Views.Dialog.LoginDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ScratchShell.Views.Dialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:helpers="clr-namespace:ScratchShell.Helpers"
    Title="{helpers:Localized Login_Title}"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    CloseButtonText="{helpers:Localized General_Cancel}"
    DefaultButton="Primary"
    PrimaryButtonText="{helpers:Localized General_Login}"
    SecondaryButtonText="{helpers:Localized General_Register}"
    mc:Ignorable="d">
    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type local:LoginDialog}" />
    </ui:ContentDialog.Resources>
    <Grid Width="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Username Section  -->
        <TextBlock
            x:Name="UsernameTextBlock"
            Grid.Row="0"
            Margin="0,0,0,0"
            FontWeight="SemiBold"
            Text="{helpers:Localized Login_Username}" />
        <ui:TextBox
            x:Name="UsernameTextBox"
            Grid.Row="1"
            PlaceholderText="{helpers:Localized Placeholder_Username}" />

        <!--  Password Section  -->
        <TextBlock
            x:Name="PasswordTextBlock"
            Grid.Row="2"
            Margin="0,10,0,0"
            FontWeight="SemiBold"
            Text="{helpers:Localized Login_Password}" />
        <ui:PasswordBox
            x:Name="PasswordBox"
            Grid.Row="3"
            PasswordChar="*"
            PlaceholderText="{helpers:Localized Placeholder_Password}" />

        <!--  Status Message  -->
        <TextBlock
            x:Name="StatusTextBlock"
            Grid.Row="4"
            Margin="10,5,10,5"
            HorizontalAlignment="Center"
            FontSize="12"
            Foreground="Red"
            Text=""
            Visibility="Collapsed" />

        <!--  Loading Indicator  -->
        <ui:ProgressRing
            x:Name="LoadingProgressRing"
            Grid.Row="5"
            Width="24"
            Height="24"
            Margin="10,5,10,10"
            HorizontalAlignment="Center"
            IsIndeterminate="True"
            Visibility="Collapsed" />
    </Grid>
</ui:ContentDialog>