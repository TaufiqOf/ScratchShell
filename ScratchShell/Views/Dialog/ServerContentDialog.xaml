<ui:ContentDialog
    x:Class="ScratchShell.View.Dialog.ServerContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ScratchShell.View.Dialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:helpers="clr-namespace:ScratchShell.Helpers"
    Title="{helpers:Localized Server_Title}"
    d:DesignHeight="1000"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    CloseButtonText="{helpers:Localized General_Close}"
    PrimaryButtonText="{helpers:Localized General_Save}"
    mc:Ignorable="d">

    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type local:ServerContentDialog}" />

        <!--  Style for validation error display  -->
        <Style x:Key="ValidationErrorTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Red" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Margin" Value="0,2,0,5" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>

        <!--  Style for required field labels  -->
        <Style x:Key="RequiredFieldLabel" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,10,0,0" />
        </Style>
    </ui:ContentDialog.Resources>

    <Grid Width="450">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Top">

            <TextBlock Style="{StaticResource RequiredFieldLabel}">
                <Run Text="{helpers:Localized Server_Name}" />
                <Run Foreground="Red" Text="*" />
            </TextBlock>
            <TextBox x:Name="NameTextBox" Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" />
            <TextBlock
                x:Name="NameErrorText"
                Style="{StaticResource ValidationErrorTextBlock}"
                Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=NameTextBox}"
                Visibility="{Binding (Validation.HasError), ElementName=NameTextBox, Converter={StaticResource BoolToVisibilityConverter}}" />

            <TextBlock Style="{StaticResource RequiredFieldLabel}">
                <Run Text="{helpers:Localized Server_Host}" />
                <Run Foreground="Red" Text="*" />
            </TextBlock>
            <TextBox
                x:Name="HostTextBox"
                Text="{Binding Host, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                ToolTip="{helpers:Localized Validation_HostTooltip}" />
            <TextBlock
                x:Name="HostErrorText"
                Style="{StaticResource ValidationErrorTextBlock}"
                Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=HostTextBox}"
                Visibility="{Binding (Validation.HasError), ElementName=HostTextBox, Converter={StaticResource BoolToVisibilityConverter}}" />

            <TextBlock Style="{StaticResource RequiredFieldLabel}">
                <Run Text="{helpers:Localized Server_Port}" />
                <Run Foreground="Red" Text="*" />
            </TextBlock>
            <TextBox
                x:Name="PortTextBox"
                Text="{Binding Port, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                ToolTip="{helpers:Localized Validation_PortTooltip}" />
            <TextBlock
                x:Name="PortErrorText"
                Style="{StaticResource ValidationErrorTextBlock}"
                Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=PortTextBox}"
                Visibility="{Binding (Validation.HasError), ElementName=PortTextBox, Converter={StaticResource BoolToVisibilityConverter}}" />

            <TextBlock Style="{StaticResource RequiredFieldLabel}">
                <Run Text="{helpers:Localized Server_Protocol}" />
                <Run Foreground="Red" Text="*" />
            </TextBlock>
            <ComboBox
                x:Name="ProtocolComboBox"
                Margin="0,5,0,0"
                ItemsSource="{Binding ProtocolTypes}"
                SelectedItem="{Binding ProtocolType, Mode=TwoWay}"
                ToolTip="{helpers:Localized Validation_ProtocolTooltip}" />
            <TextBlock
                Margin="0,2,0,0"
                FontSize="10"
                Foreground="Gray"
                Text="{helpers:Localized Protocol_Description_Combined}"
                TextWrapping="Wrap" />

            <TextBlock Style="{StaticResource RequiredFieldLabel}">
                <Run Text="{helpers:Localized UI_Username}" />
                <Run Foreground="Red" Text="*" />
            </TextBlock>
            <TextBox
                x:Name="UsernameTextBox"
                Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                ToolTip="{helpers:Localized Validation_UsernameTooltip}" />
            <TextBlock
                x:Name="UsernameErrorText"
                Style="{StaticResource ValidationErrorTextBlock}"
                Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=UsernameTextBox}"
                Visibility="{Binding (Validation.HasError), ElementName=UsernameTextBox, Converter={StaticResource BoolToVisibilityConverter}}" />

            <TextBlock
                Margin="0,10,0,0"
                FontWeight="SemiBold"
                Text="{helpers:Localized UI_Password}" />
            <PasswordBox
                x:Name="PasswordInput"
                PasswordChanged="PasswordBox_PasswordChanged"
                ToolTip="{helpers:Localized Placeholder_ServerPassword}" />

            <StackPanel
                Margin="8"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <CheckBox IsChecked="{Binding UseKeyFile, Mode=TwoWay}" />
                <TextBlock VerticalAlignment="Center" Text="{helpers:Localized Server_UseKeyFileAuth}" />
            </StackPanel>

            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Margin="0,10,0,0"
                    FontWeight="SemiBold"
                    Text="{helpers:Localized Server_PublicKey}" />
                <TextBox
                    Grid.Column="1"
                    IsEnabled="{Binding UseKeyFile, Mode=TwoWay}"
                    Text="{Binding PublicKeyFilePath, Mode=TwoWay}"
                    ToolTip="{helpers:Localized Validation_PublicKeyTooltip}" />
                <ui:Button
                    Grid.Column="2"
                    Click="PublicKeyFilePath_Click"
                    FontSize="20"
                    Icon="{ui:SymbolIcon Symbol=Open24}"
                    IsEnabled="{Binding UseKeyFile, Mode=TwoWay}"
                    ToolTip="{helpers:Localized Tooltip_BrowsePublicKey}" />
            </Grid>

            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Margin="0,10,0,0"
                    FontWeight="SemiBold"
                    Text="{helpers:Localized Server_PrivateKey}" />
                <TextBox
                    Grid.Column="1"
                    IsEnabled="{Binding UseKeyFile, Mode=TwoWay}"
                    Text="{Binding PrivateKeyFilePath, Mode=TwoWay}"
                    ToolTip="{helpers:Localized Validation_PrivateKeyTooltip}" />
                <ui:Button
                    Grid.Column="2"
                    Click="PrivateKeyFilePath_Click"
                    FontSize="20"
                    Icon="{ui:SymbolIcon Symbol=Open24}"
                    IsEnabled="{Binding UseKeyFile, Mode=TwoWay}"
                    ToolTip="{helpers:Localized Tooltip_BrowsePrivateKey}" />
            </Grid>

            <TextBlock
                Margin="0,10,0,0"
                FontWeight="SemiBold"
                Text="{helpers:Localized Server_KeyFilePassword}" />
            <PasswordBox
                x:Name="KeyFilePasswordInput"
                IsEnabled="{Binding UseKeyFile, Mode=TwoWay}"
                PasswordChanged="KeyFilePasswordBox_PasswordChanged"
                ToolTip="{helpers:Localized Placeholder_KeyFilePassword}" />

            <!--  Validation summary  -->
            <Border
                x:Name="ValidationSummary"
                Margin="0,10,0,0"
                Padding="10"
                Background="#FFFFE6E6"
                BorderBrush="Red"
                BorderThickness="1"
                CornerRadius="3"
                Visibility="Collapsed">
                <StackPanel>
                    <TextBlock
                        FontWeight="Bold"
                        Foreground="Red"
                        Text="{helpers:Localized Server_ValidationSummary}" />
                    <TextBlock
                        x:Name="ValidationSummaryText"
                        Foreground="Red"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</ui:ContentDialog>