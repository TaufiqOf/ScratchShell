<ui:ContentDialog
    x:Class="ScratchShell.View.Dialog.ServerContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ScratchShell.View.Dialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Server"
    d:DesignHeight="1000"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    CloseButtonText="Close"
    PrimaryButtonText="Save"
    mc:Ignorable="d">

    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type local:ServerContentDialog}" />
        
        <!-- Style for validation error display -->
        <Style x:Key="ValidationErrorTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,2,0,5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <!-- Style for required field labels -->
        <Style x:Key="RequiredFieldLabel" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>
    </ui:ContentDialog.Resources>

    <Grid Width="450">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Top">

            <TextBlock Style="{StaticResource RequiredFieldLabel}">
                <Run Text="Server Name"/>
                <Run Text="*" Foreground="Red"/>
            </TextBlock>
            <TextBox x:Name="NameTextBox" Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" />
            <TextBlock x:Name="NameErrorText" 
                       Style="{StaticResource ValidationErrorTextBlock}"
                       Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=NameTextBox}"
                       Visibility="{Binding (Validation.HasError), ElementName=NameTextBox, Converter={StaticResource BoolToVisibilityConverter}}" />

            <TextBlock Style="{StaticResource RequiredFieldLabel}">
                <Run Text="Host"/>
                <Run Text="*" Foreground="Red"/>
            </TextBlock>
            <TextBox x:Name="HostTextBox" 
                     Text="{Binding Host, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                     ToolTip="Enter IP address (e.g., 192.168.1.100) or hostname (e.g., server.example.com)" />
            <TextBlock x:Name="HostErrorText" 
                       Style="{StaticResource ValidationErrorTextBlock}"
                       Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=HostTextBox}"
                       Visibility="{Binding (Validation.HasError), ElementName=HostTextBox, Converter={StaticResource BoolToVisibilityConverter}}" />

            <TextBlock Style="{StaticResource RequiredFieldLabel}">
                <Run Text="Port"/>
                <Run Text="*" Foreground="Red"/>
            </TextBlock>
            <TextBox x:Name="PortTextBox" 
                     Text="{Binding Port, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                     ToolTip="Enter port number (1-65535). Common ports: SSH=22, FTP=21, SFTP=22" />
            <TextBlock x:Name="PortErrorText" 
                       Style="{StaticResource ValidationErrorTextBlock}"
                       Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=PortTextBox}"
                       Visibility="{Binding (Validation.HasError), ElementName=PortTextBox, Converter={StaticResource BoolToVisibilityConverter}}" />

            <TextBlock Style="{StaticResource RequiredFieldLabel}">
                <Run Text="Protocol"/>
                <Run Text="*" Foreground="Red"/>
            </TextBlock>
            <ComboBox x:Name="ProtocolComboBox"
                      Margin="0,5,0,0"
                      ItemsSource="{Binding ProtocolTypes}"
                      SelectedItem="{Binding ProtocolType, Mode=TwoWay}"
                      ToolTip="Select the connection protocol" />
            <TextBlock Text="SSH: Secure Shell for terminal access&#x0a;FTP: File Transfer Protocol&#x0a;SFTP: SSH File Transfer Protocol"
                       FontSize="10"
                       Foreground="Gray"
                       Margin="0,2,0,0"
                       TextWrapping="Wrap" />

            <TextBlock Style="{StaticResource RequiredFieldLabel}">
                <Run Text="Username"/>
                <Run Text="*" Foreground="Red"/>
            </TextBlock>
            <TextBox x:Name="UsernameTextBox" 
                     Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                     ToolTip="Enter your username for the server" />
            <TextBlock x:Name="UsernameErrorText" 
                       Style="{StaticResource ValidationErrorTextBlock}"
                       Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=UsernameTextBox}"
                       Visibility="{Binding (Validation.HasError), ElementName=UsernameTextBox, Converter={StaticResource BoolToVisibilityConverter}}" />

            <TextBlock
                Margin="0,10,0,0"
                FontWeight="SemiBold"
                Text="Password" />
            <PasswordBox x:Name="PasswordInput" 
                         PasswordChanged="PasswordBox_PasswordChanged"
                         ToolTip="Enter your password (leave empty if using key file authentication)" />

            <StackPanel
                Margin="8"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <CheckBox IsChecked="{Binding UseKeyFile, Mode=TwoWay}" />
                <TextBlock VerticalAlignment="Center" Text="Use Key File Authentication" />
            </StackPanel>

            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Margin="0,10,0,0"
                    FontWeight="SemiBold"
                    Text="Public Key" />
                <TextBox
                    Grid.Column="1"
                    IsEnabled="{Binding UseKeyFile, Mode=TwoWay}"
                    Text="{Binding PublicKeyFilePath, Mode=TwoWay}"
                    ToolTip="Path to your public key file (.pub)" />
                <ui:Button
                    Grid.Column="2"
                    Click="PublicKeyFilePath_Click"
                    FontSize="20"
                    Icon="{ui:SymbolIcon Symbol=Open24}"
                    IsEnabled="{Binding UseKeyFile, Mode=TwoWay}"
                    ToolTip="Browse for public key file" />
            </Grid>

            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Margin="0,10,0,0"
                    FontWeight="SemiBold"
                    Text="Private Key" />
                <TextBox
                    Grid.Column="1"
                    IsEnabled="{Binding UseKeyFile, Mode=TwoWay}"
                    Text="{Binding PrivateKeyFilePath, Mode=TwoWay}"
                    ToolTip="Path to your private key file (.pem, .key)" />
                <ui:Button
                    Grid.Column="2"
                    Click="PrivateKeyFilePath_Click"
                    FontSize="20"
                    Icon="{ui:SymbolIcon Symbol=Open24}"
                    IsEnabled="{Binding UseKeyFile, Mode=TwoWay}"
                    ToolTip="Browse for private key file" />
            </Grid>

            <TextBlock
                Margin="0,10,0,0"
                FontWeight="SemiBold"
                Text="Key File Password" />
            <PasswordBox
                x:Name="KeyFilePasswordInput"
                IsEnabled="{Binding UseKeyFile, Mode=TwoWay}"
                PasswordChanged="KeyFilePasswordBox_PasswordChanged"
                ToolTip="Enter password for encrypted key file (leave empty if key is not encrypted)" />

            <!-- Validation summary -->
            <Border x:Name="ValidationSummary"
                    Background="#FFFFE6E6"
                    BorderBrush="Red"
                    BorderThickness="1"
                    Margin="0,10,0,0"
                    Padding="10"
                    CornerRadius="3"
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="Please fix the following errors:" FontWeight="Bold" Foreground="Red" />
                    <TextBlock x:Name="ValidationSummaryText" Foreground="Red" TextWrapping="Wrap" />
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</ui:ContentDialog>