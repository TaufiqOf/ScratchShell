<ui:ContentDialog
    x:Class="ScratchShell.Views.Dialog.PasswordReentryDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ScratchShell.Views.Dialog"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Password Required for Cloud Sync"
    DefaultButton="Primary"
    PrimaryButtonText="Verify"
    SecondaryButtonText="Cancel">
    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type local:PasswordReentryDialog}" />
    </ui:ContentDialog.Resources>
    <StackPanel MinWidth="300" Margin="20">
        <TextBlock
            Margin="0,0,0,15"
            FontSize="14"
            Opacity="0.8"
            Text="Cloud sync requires your password to encrypt/decrypt data securely."
            TextWrapping="Wrap" />

        <TextBlock Margin="0,0,0,5" Text="Username:" />
        <TextBlock
            x:Name="UsernameTextBlock"
            Margin="0,0,0,15"
            FontWeight="Medium"
            Text="" />

        <TextBlock Margin="0,0,0,5" Text="Password:" />
        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,15" />

        <TextBlock
            x:Name="StatusTextBlock"
            Margin="0,0,0,10"
            Text=""
            TextWrapping="Wrap"
            Visibility="Collapsed" />

        <ui:ProgressRing
            x:Name="LoadingProgressRing"
            Width="24"
            Height="24"
            HorizontalAlignment="Center"
            Visibility="Collapsed" />
    </StackPanel>
</ui:ContentDialog>