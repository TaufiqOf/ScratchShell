<UserControl
    x:Class="ScratchShell.Views.Component.ServerCardControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ScratchShell.Views.Component"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:helpers="clr-namespace:ScratchShell.Helpers"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <ui:Card Width="300">
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <ui:CardAction Command="{Binding EnterServerCommand, Mode=OneWay}">
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon FontSize="16" Symbol="Server24" />
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="DemiBold"
                                    IsEnabled="True"
                                    Text="{Binding Name}" />
                            </StackPanel>

                            <StackPanel Margin="0,4,0,0" Orientation="Horizontal">
                                <TextBlock Margin="0,0,8,0" Text="{Binding ProtocolType}" />
                                <TextBlock Text="{Binding Host}" />
                                <TextBlock Text=":" />
                                <TextBlock Margin="0,0,8,0" Text="{Binding Port}" />
                            </StackPanel>
                            <Separator Margin="2" />
                        </StackPanel>

                        <StackPanel
                            Grid.Row="1"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">

                            <ui:DropDownButton
                                Width="65"
                                Height="34"
                                Margin="0,0,5,0"
                                FontSize="20"
                                FontWeight="Bold"
                                Icon="{ui:SymbolIcon WindowConsole20}"
                                ToolTip="{helpers:Localized Tooltip_OpenTerminal}">
                                <ui:DropDownButton.Flyout>
                                    <ContextMenu>
                                        <MenuItem
                                            Command="{Binding OpenTerminalCommand}"
                                            CommandParameter="Elevated"
                                            Header="{helpers:Localized Terminal_Elevated}">
                                            <MenuItem.Icon>
                                                <ui:SymbolIcon Symbol="Shield24" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem
                                            Command="{Binding OpenTerminalCommand}"
                                            CommandParameter="Normal"
                                            Header="{helpers:Localized Terminal_Normal}">
                                            <MenuItem.Icon>
                                                <ui:SymbolIcon Symbol="WindowConsole20" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </ContextMenu>
                                </ui:DropDownButton.Flyout>
                            </ui:DropDownButton>

                            <ui:DropDownButton
                                Width="65"
                                Height="34"
                                Margin="2"
                                FontSize="20"
                                FontWeight="Bold"
                                Icon="{ui:SymbolIcon Options24}"
                                ToolTip="{helpers:Localized Server_Actions}">
                                <ui:DropDownButton.Flyout>
                                    <ContextMenu>
                                        <MenuItem Command="{Binding EditServerCommand, Mode=OneWay}" Header="{helpers:Localized General_Edit}">
                                            <MenuItem.Icon>
                                                <ui:SymbolIcon Symbol="Edit24" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Command="{Binding CopyServerCommand, Mode=OneWay}" Header="{helpers:Localized ContextMenu_Copy}">
                                            <MenuItem.Icon>
                                                <ui:SymbolIcon Symbol="Copy24" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <Separator />
                                        <MenuItem Command="{Binding DeleteServerCommand, Mode=OneWay}" Header="{helpers:Localized General_Delete}">
                                            <MenuItem.Icon>
                                                <ui:SymbolIcon Symbol="Delete24" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </ContextMenu>
                                </ui:DropDownButton.Flyout>
                            </ui:DropDownButton>
                        </StackPanel>
                    </Grid>
                </ui:CardAction>
            </StackPanel>
        </ui:Card>
    </Grid>
</UserControl>