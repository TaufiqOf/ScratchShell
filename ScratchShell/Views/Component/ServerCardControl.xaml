<UserControl
    x:Class="ScratchShell.Views.Component.ServerCardControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ScratchShell.Views.Component"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <ui:Card Width="300">
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <ui:CardAction Command="{Binding EnterServerCommand, Mode=OneWay}">
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon FontSize="16" Symbol="Server24" />
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="DemiBold"
                                    IsEnabled="True"
                                    Text="{Binding Name}" />
                            </StackPanel>

                            <StackPanel Margin="0,4,0,0" Orientation="Horizontal">
                                <TextBlock Margin="0,0,8,0" Text="{Binding ProtocolType}" />
                                <TextBlock Text="{Binding Host}" />
                                <TextBlock Text=":" />
                                <TextBlock Margin="0,0,8,0" Text="{Binding Port}" />
                            </StackPanel>
                            <Separator Margin="2" />
                        </StackPanel>

                        <StackPanel
                            Grid.Row="1"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">

                            <ui:DropDownButton
                                Width="65"
                                Height="34"
                                Margin="0,0,5,0"
                                FontSize="20"
                                FontWeight="Bold"
                                Icon="{ui:SymbolIcon WindowConsole20}"
                                ToolTip="Open Terminal">
                                <ui:DropDownButton.Flyout>
                                    <ContextMenu>
                                        <MenuItem
                                            Command="{Binding OpenTerminalCommand}"
                                            CommandParameter="Elevated"
                                            Header="Elevated" />
                                        <MenuItem
                                            Command="{Binding OpenTerminalCommand}"
                                            CommandParameter="Normal"
                                            Header="Normal" />
                                    </ContextMenu>
                                </ui:DropDownButton.Flyout>
                            </ui:DropDownButton>

                            <Button
                                Margin="2"
                                Command="{Binding EditServerCommand, Mode=OneWay}"
                                ToolTip="Edit">
                                <ui:SymbolIcon FontSize="20" Symbol="Edit24" />
                            </Button>
                            <Button
                                Margin="2"
                                Command="{Binding CopyServerCommand, Mode=OneWay}"
                                ToolTip="Make A Copy">
                                <ui:SymbolIcon FontSize="20" Symbol="Copy16" />
                            </Button>
                            <Button
                                Margin="2"
                                Command="{Binding DeleteServerCommand, Mode=OneWay}"
                                ToolTip="Delete">
                                <ui:SymbolIcon FontSize="20" Symbol="Delete24" />
                            </Button>
                        </StackPanel>
                    </Grid>
                </ui:CardAction>
            </StackPanel>
        </ui:Card>
    </Grid>
</UserControl>