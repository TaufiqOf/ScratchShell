<Page
    x:Class="ScratchShell.Views.Pages.SessionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ScratchShell.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:ScratchShell.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:helpers="clr-namespace:ScratchShell.Helpers"
    d:DataContext="{d:DesignInstance local:SessionPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Grid>
        <ui:Card
            Margin="-10"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch">
            <TabControl
                Margin="-10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                ItemsSource="{Binding ViewModel.Tabs}"
                SelectedItem="{Binding ViewModel.SelectedTab, Mode=TwoWay}">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <Grid
                            Width="160"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            ToolTip="{Binding Header}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  Left side: icon and text  -->
                            <StackPanel
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <ui:SymbolIcon Margin="0,0,6,0" Symbol="{Binding Icon}" />
                                <TextBlock Text="{Binding Header}" />
                            </StackPanel>

                            <!--  Right side: close button  -->
                            <Button
                                Grid.Column="1"
                                Width="16"
                                Height="16"
                                Margin="6,0,0,0"
                                Padding="0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding CloseTabCommand}"
                                CommandParameter="{Binding}"
                                Content="✕"
                                Focusable="False"
                                FontSize="10"
                                ToolTip="{helpers:Localized Tooltip_CloseTab}" />
                        </Grid>
                    </DataTemplate>
                </TabControl.ItemTemplate>

                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <ContentControl
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Content="{Binding Content}" />
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
        </ui:Card>
    </Grid>
</Page>