<Page
    x:Class="ScratchShell.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:ScratchShell.Helpers"
    xmlns:local="clr-namespace:ScratchShell.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="SettingsPage"
    d:DataContext="{d:DesignInstance local:SettingsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.HorizontalScrollBarVisibility="Visible"
    ScrollViewer.VerticalScrollBarVisibility="Visible"
    mc:Ignorable="d">
    <Page.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
        <helpers:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <helpers:BoolToInverseBoolConverter x:Key="BoolToInverseBoolConverter" />
    </Page.Resources>

    <StackPanel Margin="0,0,0,20">
        <!--  Account Section  -->
        <TextBlock
            FontSize="20"
            FontWeight="Medium"
            Text="Account" />
        <TextBlock
            Margin="0,12,0,0"
            FontWeight="Medium"
            Text="{Binding ViewModel.CurrentUsername, Mode=OneWay}" />
        <ui:Button
            Margin="0,8,0,0"
            HorizontalAlignment="Left"
            Appearance="Secondary"
            Command="{Binding ViewModel.LogoutCommand, Mode=OneWay}"
            Content="Logout"
            Icon="{ui:SymbolIcon SignOut24}" />

        <Separator Margin="0,20,0,0" />

        <!--  Cloud Sync Section  -->
        <TextBlock
            Margin="0,20,0,0"
            FontSize="20"
            FontWeight="Medium"
            Text="Cloud Sync" />

        <CheckBox
            Margin="0,12,0,0"
            Command="{Binding ViewModel.UpdateCloudSyncSettingsCommand, Mode=OneWay}"
            Content="Enable Cloud Sync"
            IsChecked="{Binding ViewModel.EnableCloudSync, Mode=TwoWay}" />

        <CheckBox
            Margin="0,8,0,0"
            Command="{Binding ViewModel.UpdateCloudSyncSettingsCommand, Mode=OneWay}"
            Content="Auto-sync on startup"
            IsChecked="{Binding ViewModel.AutoSyncOnStartup, Mode=TwoWay}"
            IsEnabled="{Binding ViewModel.EnableCloudSync, Mode=OneWay}" />

        <CheckBox
            Margin="0,8,0,0"
            Command="{Binding ViewModel.UpdateCloudSyncSettingsCommand, Mode=OneWay}"
            Content="Auto-sync on changes"
            IsChecked="{Binding ViewModel.AutoSyncOnChange, Mode=TwoWay}"
            IsEnabled="{Binding ViewModel.EnableCloudSync, Mode=OneWay}" />

        <TextBlock
            Margin="0,12,0,0"
            FontStyle="Italic"
            Opacity="0.7"
            Text="{Binding ViewModel.LastSyncStatus, StringFormat='Last sync: {0}', Mode=OneWay}" />

        <TextBlock
            Margin="0,4,0,0"
            FontWeight="Medium"
            Foreground="{DynamicResource SystemAccentColorSecondaryBrush}"
            Text="{Binding ViewModel.SyncStatusMessage, Mode=OneWay}"
            Visibility="{Binding ViewModel.SyncStatusMessage, Converter={StaticResource StringToVisibilityConverter}}" />

        <StackPanel
            Margin="0,12,0,0"
            IsEnabled="{Binding ViewModel.EnableCloudSync, Mode=OneWay}"
            Orientation="Horizontal">

            <ui:Button
                Margin="0,0,8,0"
                Appearance="Primary"
                Command="{Binding ViewModel.SyncCommand, Mode=OneWay}"
                Content="Sync"
                Icon="{ui:SymbolIcon CloudArrowUp24}"
                IsEnabled="{Binding ViewModel.IsSyncing, Converter={StaticResource BoolToInverseBoolConverter}}" />

            <ui:Button
                Appearance="Danger"
                Command="{Binding ViewModel.DeleteCloudSettingsCommand, Mode=OneWay}"
                Content="Delete Cloud Data"
                Icon="{ui:SymbolIcon Delete24}"
                IsEnabled="{Binding ViewModel.IsSyncing, Converter={StaticResource BoolToInverseBoolConverter}}" />
        </StackPanel>

        <ui:ProgressRing
            Width="24"
            Height="24"
            Margin="0,12,0,0"
            HorizontalAlignment="Left"
            IsIndeterminate="{Binding ViewModel.IsSyncing, Mode=OneWay}"
            Visibility="{Binding ViewModel.IsSyncing, Converter={StaticResource BoolToVisibilityConverter}}" />

        <Separator Margin="0,20,0,0" />

        <!--  Personalization Section  -->
        <TextBlock
            Margin="0,20,0,0"
            FontSize="20"
            FontWeight="Medium"
            Text="Personalization" />
        <TextBlock Margin="0,12,0,0" Text="Theme" />
        <RadioButton
            Margin="0,12,0,0"
            Command="{Binding ViewModel.ChangeThemeCommand, Mode=OneWay}"
            CommandParameter="theme_light"
            Content="Light"
            GroupName="themeSelect"
            IsChecked="{Binding ViewModel.CurrentTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Light, Mode=OneWay}" />
        <RadioButton
            Margin="0,8,0,0"
            Command="{Binding ViewModel.ChangeThemeCommand, Mode=OneWay}"
            CommandParameter="theme_dark"
            Content="Dark"
            GroupName="themeSelect"
            IsChecked="{Binding ViewModel.CurrentTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Dark, Mode=OneWay}" />

        <TextBlock Margin="0,12,0,0" Text="Default Shell" />
        <ComboBox
            Margin="0,5,0,0"
            ItemsSource="{Binding ViewModel.ShellTypes}"
            SelectedItem="{Binding ViewModel.ShellType, Mode=TwoWay}" />

        <Separator Margin="0,20,0,0" />

        <!--  About Section  -->
        <TextBlock
            Margin="0,20,0,0"
            FontSize="20"
            FontWeight="Medium"
            Text="About" />
        <TextBlock Margin="0,12,0,0" Text="{Binding ViewModel.AppVersion, Mode=OneWay}" />
        <TextBlock Margin="0,12,0,0" Text="{Binding ViewModel.Credit, Mode=OneWay}" />
    </StackPanel>
</Page>
