<UserControl
    x:Class="ScratchShell.UserControls.SnippetUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ScratchShell.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ui:Card
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        VerticalContentAlignment="Stretch">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <!--  Buttons Grid  -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ui:Button
                    x:Name="NewButton"
                    Grid.Column="0"
                    Margin="0,0,5,0"
                    Click="NewButton_Click"
                    FontSize="20"
                    Icon="{ui:SymbolIcon Symbol=Add24}"
                    ToolTip="Create a new snippet" />

                <ui:Button
                    x:Name="EditButton"
                    Grid.Column="1"
                    Margin="0,0,5,0"
                    Click="EditButton_Click"
                    FontSize="20"
                    Icon="{ui:SymbolIcon Symbol=Edit24}"
                    IsEnabled="False"
                    ToolTip="Edit selected snippet" />

                <ui:Button
                    x:Name="DeleteButton"
                    Grid.Column="2"
                    Click="DeleteButton_Click"
                    FontSize="20"
                    Icon="{ui:SymbolIcon Symbol=Delete24}"
                    IsEnabled="False"
                    ToolTip="Delete selected snippet" />
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <ui:TextBox
                    x:Name="SearchSnippetTextBox"
                    Grid.Column="0"
                    Icon="{ui:SymbolIcon Symbol=Search20}"
                    TextChanged="SearchSnippetTextChanged" />
                <ToggleButton
                    x:Name="SearchSnippetButton"
                    Grid.Column="1"
                    Click="ShowHideSystemSystemSnippetClick"
                    FontSize="20"
                    IsChecked="True"
                    ToolTip="Show/Hide System Snippet">
                    <ui:SymbolIcon Symbol="System20" />
                </ToggleButton>
            </Grid>
            <Separator Grid.Row="2" Margin="5" />

            <TreeView
                x:Name="SnippetsListBox"
                Grid.Row="3"
                ItemsSource="{Binding GroupedSnippets, RelativeSource={RelativeSource AncestorType=UserControl}}"
                SelectedItemChanged="SnippetsListBoxSelectedItemChanged">
                <TreeView.ItemContainerStyle>
                    <Style BasedOn="{StaticResource {x:Type TreeViewItem}}" TargetType="TreeViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </TreeView.ItemContainerStyle>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Snippets}">
                        <!--  Category  -->
                        <TextBlock FontWeight="Bold" Text="{Binding Category}" />

                        <!--  Snippets inside  -->
                        <HierarchicalDataTemplate.ItemTemplate>
                            <DataTemplate>
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="180" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock VerticalAlignment="Center" Text="{Binding Name}" />
                                    <ui:Button
                                        Grid.Column="1"
                                        Margin="5,0,0,0"
                                        HorizontalAlignment="Right"
                                        Command="{Binding RunCommand}"
                                        CommandParameter="{Binding}"
                                        Icon="{ui:SymbolIcon Symbol=ArrowRight24}"
                                        ToolTip="Run this snippet in the terminal" />
                                </Grid>
                            </DataTemplate>
                        </HierarchicalDataTemplate.ItemTemplate>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
            <Separator Grid.Row="4" Margin="5" />
            <!--  Code editor  -->
            <ui:TextBox
                x:Name="SnippetContentTextBox"
                Grid.Row="5"
                AcceptsReturn="True"
                ClearButtonEnabled="False"
                HorizontalScrollBarVisibility="Auto"
                IsReadOnly="True"
                Text="{Binding SelectedSnippet.Code, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                VerticalScrollBarVisibility="Auto" />
        </Grid>
    </ui:Card>
</UserControl>