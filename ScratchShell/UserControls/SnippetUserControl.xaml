<UserControl
    x:Class="ScratchShell.UserControls.SnippetUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ScratchShell.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <!--  Buttons Grid  -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ui:Button
                x:Name="NewButton"
                Grid.Column="0"
                Margin="0,0,5,0"
                Click="NewButton_Click"
                FontSize="20"
                Icon="{ui:SymbolIcon Symbol=Add24}"
                ToolTip="New Snippet" />

            <ui:Button
                x:Name="EditButton"
                Grid.Column="1"
                Margin="0,0,5,0"
                Click="EditButton_Click"
                FontSize="20"
                Icon="{ui:SymbolIcon Symbol=Edit24}"
                ToolTip="Edit Snippet" />

            <ui:Button
                x:Name="DeleteButton"
                Grid.Column="2"
                Click="DeleteButton_Click"
                FontSize="20"
                Icon="{ui:SymbolIcon Symbol=Delete24}"
                ToolTip="Delete Snippet" />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <ui:TextBox
                x:Name="SearchSnippetTextBox"
                Grid.Column="0"
                Icon="{ui:SymbolIcon Symbol=Search20}"
                TextChanged="SearchSnippetTextChanged" />
            <ToggleButton
                x:Name="SearchSnippetButton"
                Grid.Column="1"
                Click="ShowHideSystemSystemSnippetClick"
                FontSize="20"
                IsChecked="True"
                ToolTip="Show/Hide System Snippet">
                <ui:SymbolIcon Symbol="System20" />
            </ToggleButton>
        </Grid>
        <!--  ListBox  -->
        <!--  List of snippets  -->
        <ListBox
            x:Name="SnippetsListBox"
            Grid.Row="2"
            ItemsSource="{Binding Snippets, RelativeSource={RelativeSource AncestorType=UserControl}}"
            SelectedItem="{Binding SelectedSnippet, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="-5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  Show snippet name  -->
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="14"
                            Text="{Binding Name}" />

                        <!--  Right arrow button  -->
                        <ui:Button
                            Grid.Column="1"
                            Margin="5,0,0,0"
                            Command="{Binding RunCommand}"
                            CommandParameter="{Binding}"
                            FontSize="16"
                            Icon="{ui:SymbolIcon Symbol=ArrowRight24}"
                            ToolTip="Open Snippet" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!--  Code editor  -->
        <ui:TextBox
            x:Name="SnippetContentTextBox"
            Grid.Row="3"
            AcceptsReturn="True"
            ClearButtonEnabled="False"
            HorizontalScrollBarVisibility="Auto"
            IsReadOnly="True"
            Text="{Binding SelectedSnippet.Code, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
            VerticalScrollBarVisibility="Auto" />
    </Grid>
</UserControl>