<UserControl
    x:Class="ScratchShell.UserControls.BrowserControl.BrowserUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ScratchShell.UserControls.BrowserControl"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <UserControl.Resources>
        <local:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <!--  Style for the editable TextBox  -->
        <Style x:Key="EditTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="2" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="Blue" />
        </Style>

        <!--  Grid View Item ContentTemplate  -->
        <DataTemplate x:Key="GridViewItemContentTemplate">
            <Border
                Width="120"
                Height="120"
                Margin="5"
                Background="Transparent"
                MouseLeftButtonDown="GridItem_MouseLeftButtonDown"
                MouseRightButtonDown="GridItem_MouseRightButtonDown">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Icon  -->
                    <ui:SymbolIcon
                        Grid.Row="0"
                        Margin="0,10,0,5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="48"
                        Symbol="{Binding Icon}" />

                    <!--  Name  -->
                    <Grid Grid.Row="1" Margin="5,0">
                        <!--  Normal display mode  -->
                        <TextBlock
                            x:Name="GridDisplayTextBlock"
                            MaxHeight="40"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontWeight="{Binding IsFolder, Converter={StaticResource BoolToFontWeightConverter}}"
                            MouseLeftButtonDown="DisplayTextBlock_MouseLeftButtonDown"
                            Text="{Binding Name}"
                            TextAlignment="Center"
                            TextWrapping="Wrap">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsInEditMode}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!--  Edit mode  -->
                        <TextBox
                            x:Name="GridEditTextBox"
                            MinWidth="80"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            KeyDown="EditTextBox_KeyDown"
                            Loaded="EditTextBox_Loaded"
                            LostFocus="EditTextBox_LostFocus"
                            Style="{StaticResource EditTextBoxStyle}"
                            Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                            TextAlignment="Center"
                            Visibility="{Binding IsInEditMode, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Toolbar  -->
        <Border
            Grid.Row="0"
            Padding="5"
            Background="{DynamicResource ApplicationBackgroundBrush}"
            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
            BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <ui:Button
                    x:Name="GridViewButton"
                    Width="32"
                    Height="32"
                    Margin="2"
                    Padding="4"
                    Click="GridViewButton_Click"
                    ToolTip="Grid View">
                    <ui:SymbolIcon FontSize="16" Symbol="Grid24" />
                </ui:Button>
                <ui:Button
                    x:Name="ListViewButton"
                    Width="32"
                    Height="32"
                    Margin="2"
                    Padding="4"
                    Click="ListViewButton_Click"
                    ToolTip="List View">
                    <ui:SymbolIcon FontSize="16" Symbol="List24" />
                </ui:Button>


            </StackPanel>
        </Border>

        <!--  List View (Default)  -->
        <ui:ListView
            x:Name="BrowserList"
            Grid.Row="1"
            MouseDoubleClick="BrowserListMouseDoubleClick"
            MouseRightButtonUp="BrowserList_MouseRightButtonUp"
            PreviewKeyDown="BrowserList_PreviewKeyDown"
            PreviewMouseDown="BrowserListPreviewMouseDown"
            PreviewMouseLeftButtonDown="BrowserList_PreviewMouseLeftButtonDown"
            SelectionChanged="BrowserList_SelectionChanged"
            SelectionMode="Extended"
            Visibility="Visible">
            <ui:ListView.View>
                <ui:GridView>
                    <ui:GridViewColumn Width="350" Header="Name">
                        <ui:GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5,2" Orientation="Horizontal">
                                    <ui:SymbolIcon
                                        Margin="0,0,8,0"
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        Symbol="{Binding Icon}" />

                                    <!--  Normal display mode  -->
                                    <TextBlock
                                        x:Name="DisplayTextBlock"
                                        VerticalAlignment="Center"
                                        FontWeight="{Binding IsFolder, Converter={StaticResource BoolToFontWeightConverter}}"
                                        MouseLeftButtonDown="DisplayTextBlock_MouseLeftButtonDown"
                                        Text="{Binding Name}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsInEditMode}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!--  Edit mode  -->
                                    <TextBox
                                        x:Name="EditTextBox"
                                        KeyDown="EditTextBox_KeyDown"
                                        Loaded="EditTextBox_Loaded"
                                        LostFocus="EditTextBox_LostFocus"
                                        Style="{StaticResource EditTextBoxStyle}"
                                        Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                        Visibility="{Binding IsInEditMode, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </StackPanel>
                            </DataTemplate>
                        </ui:GridViewColumn.CellTemplate>
                    </ui:GridViewColumn>
                    <ui:GridViewColumn Width="120" Header="Date Modified">
                        <ui:GridViewColumn.DisplayMemberBinding>
                            <Binding Path="LastUpdated" StringFormat="{}{0:yyyy-MM-dd HH:mm}" />
                        </ui:GridViewColumn.DisplayMemberBinding>
                    </ui:GridViewColumn>
                    <ui:GridViewColumn Width="100" Header="Type">
                        <ui:GridViewColumn.DisplayMemberBinding>
                            <Binding Path="DisplayType" />
                        </ui:GridViewColumn.DisplayMemberBinding>
                    </ui:GridViewColumn>
                    <ui:GridViewColumn Width="100" Header="Size">
                        <ui:GridViewColumn.DisplayMemberBinding>
                            <Binding Path="SizeFormatted" />
                        </ui:GridViewColumn.DisplayMemberBinding>
                    </ui:GridViewColumn>
                </ui:GridView>
            </ui:ListView.View>
        </ui:ListView>

        <!--  Grid View using ItemsControl to avoid template conflicts  -->
        <ScrollViewer
            x:Name="GridScrollViewer"
            Grid.Row="1"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto"
            Visibility="Collapsed">
            <ItemsControl
                x:Name="BrowserGrid"
                Focusable="True"
                ItemContainerStyle="{x:Null}"
                ItemTemplate="{StaticResource GridViewItemContentTemplate}"
                MouseDoubleClick="BrowserGridMouseDoubleClick"
                MouseRightButtonUp="BrowserGrid_MouseRightButtonUp"
                PreviewKeyDown="BrowserGrid_PreviewKeyDown">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>