<UserControl
    x:Class="ScratchShell.UserControls.BrowserControl.BrowserUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ScratchShell.UserControls.BrowserControl"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    AllowDrop="True"
    DragEnter="BrowserUserControl_DragEnter"
    DragLeave="BrowserUserControl_DragLeave"
    DragOver="BrowserUserControl_DragOver"
    Drop="BrowserUserControl_Drop">
    <UserControl.Resources>
        <local:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <!--  Style for the editable TextBox  -->
        <Style x:Key="EditTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="2" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="Blue" />
        </Style>

        <!--  Grid View Item ContentTemplate  -->
        <DataTemplate x:Key="GridViewItemContentTemplate">
            <Border
                Width="120"
                Height="120"
                Margin="5"
                MouseLeftButtonDown="GridItem_MouseLeftButtonDown"
                MouseRightButtonDown="GridItem_MouseRightButtonDown"
                ToolTip="{Binding Name}">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="Transparent" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                <Setter Property="Background" Value="LightBlue" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Icon  -->
                    <ui:SymbolIcon
                        Grid.Row="0"
                        Margin="0,5,0,5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="48"
                        Symbol="{Binding Icon}" />

                    <!--  Name  -->
                    <Grid Grid.Row="1" Margin="5,0">
                        <!--  Normal display mode  -->
                        <TextBlock
                            x:Name="GridDisplayTextBlock"
                            MaxHeight="70"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontWeight="{Binding IsFolder, Converter={StaticResource BoolToFontWeightConverter}}"
                            MouseLeftButtonDown="DisplayTextBlock_MouseLeftButtonDown"
                            Text="{Binding Name}"
                            TextAlignment="Center"
                            TextWrapping="Wrap">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsInEditMode}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!--  Edit mode  -->
                        <TextBox
                            x:Name="GridEditTextBox"
                            MinWidth="80"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            KeyDown="EditTextBox_KeyDown"
                            Loaded="EditTextBox_Loaded"
                            LostFocus="EditTextBox_LostFocus"
                            Style="{StaticResource EditTextBoxStyle}"
                            Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                            TextAlignment="Center"
                            Visibility="{Binding IsInEditMode, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Toolbar  -->
        <Border
            Grid.Row="0"
            Padding="5"
            Background="{DynamicResource ApplicationBackgroundBrush}"
            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
            BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  View Mode Buttons  -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <ui:Button
                        x:Name="GridViewButton"
                        Width="32"
                        Height="32"
                        Margin="2"
                        Padding="4"
                        Click="GridViewButton_Click"
                        ToolTip="Grid View">
                        <ui:SymbolIcon FontSize="16" Symbol="Grid24" />
                    </ui:Button>
                    <ui:Button
                        x:Name="ListViewButton"
                        Width="32"
                        Height="32"
                        Margin="2"
                        Padding="4"
                        Click="ListViewButton_Click"
                        ToolTip="List View">
                        <ui:SymbolIcon FontSize="16" Symbol="List24" />
                    </ui:Button>
                </StackPanel>

                <!--  Sorting Controls  -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock
                        Margin="10,0,5,0"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="Sort by:" />

                    <ui:DropDownButton
                        x:Name="SortDropDown"
                        Height="32"
                        Margin="0,0,5,0"
                        Padding="8,4"
                        Click="SortDropDown_Click"
                        Content="{Binding ElementName=SortDropDown, Path=Tag, FallbackValue='Name ↑'}"
                        Icon="{ui:SymbolIcon Symbol=ArrowSort24}"
                        ToolTip="Sort options">
                        <ui:DropDownButton.Flyout>
                            <ContextMenu>
                                <ui:MenuItem
                                    x:Name="SortByNameAsc"
                                    Click="SortMenuItem_Click"
                                    Header="Name (A to Z)"
                                    Icon="{ui:SymbolIcon Symbol=TextSortAscending20}"
                                    Tag="Name:Ascending" />
                                <ui:MenuItem
                                    x:Name="SortByNameDesc"
                                    Click="SortMenuItem_Click"
                                    Header="Name (Z to A)"
                                    Icon="{ui:SymbolIcon Symbol=TextSortDescending20}"
                                    Tag="Name:Descending" />
                                <Separator />
                                <ui:MenuItem
                                    x:Name="SortBySizeAsc"
                                    Click="SortMenuItem_Click"
                                    Header="Size (Smallest first)"
                                    Icon="{ui:SymbolIcon Symbol=ArrowSortUp20}"
                                    Tag="Size:Ascending" />
                                <ui:MenuItem
                                    x:Name="SortBySizeDesc"
                                    Click="SortMenuItem_Click"
                                    Header="Size (Largest first)"
                                    Icon="{ui:SymbolIcon Symbol=ArrowSortDown20}"
                                    Tag="Size:Descending" />
                                <Separator />
                                <ui:MenuItem
                                    x:Name="SortByTypeAsc"
                                    Click="SortMenuItem_Click"
                                    Header="Type (A to Z)"
                                    Icon="{ui:SymbolIcon Symbol=DocumentOnePageSparkle20}"
                                    Tag="Type:Ascending" />
                                <ui:MenuItem
                                    x:Name="SortByTypeDesc"
                                    Click="SortMenuItem_Click"
                                    Header="Type (Z to A)"
                                    Icon="{ui:SymbolIcon Symbol=DocumentOnePageSparkle20}"
                                    Tag="Type:Descending" />
                                <Separator />
                                <ui:MenuItem
                                    x:Name="SortByDateAsc"
                                    Click="SortMenuItem_Click"
                                    Header="Date (Oldest first)"
                                    Icon="{ui:SymbolIcon Symbol=CalendarLtr20}"
                                    Tag="Date:Ascending" />
                                <ui:MenuItem
                                    x:Name="SortByDateDesc"
                                    Click="SortMenuItem_Click"
                                    Header="Date (Newest first)"
                                    Icon="{ui:SymbolIcon Symbol=CalendarLtr20}"
                                    Tag="Date:Descending" />
                            </ContextMenu>
                        </ui:DropDownButton.Flyout>
                    </ui:DropDownButton>

                    <ui:Button
                        x:Name="SortDirectionButton"
                        Width="32"
                        Height="32"
                        Margin="0"
                        Padding="4"
                        Click="SortDirectionButton_Click"
                        ToolTip="Toggle sort direction">
                        <ui:SymbolIcon
                            x:Name="SortDirectionIcon"
                            FontSize="16"
                            Symbol="ArrowUp20" />
                    </ui:Button>
                </StackPanel>
            </Grid>
        </Border>

        <!--  Main content area with progress overlay  -->
        <Grid Grid.Row="1">
            <!--  List View (Default)  -->
            <ui:ListView
                x:Name="BrowserList"
                MouseDoubleClick="BrowserListMouseDoubleClick"
                MouseRightButtonUp="BrowserList_MouseRightButtonUp"
                PreviewKeyDown="BrowserList_PreviewKeyDown"
                PreviewMouseDown="BrowserListPreviewMouseDown"
                PreviewMouseLeftButtonDown="BrowserList_PreviewMouseLeftButtonDown"
                SelectionChanged="BrowserList_SelectionChanged"
                SelectionMode="Extended"
                Visibility="Visible">
                <ui:ListView.View>
                    <ui:GridView>
                        <ui:GridViewColumn Width="350" Header="Name">
                            <ui:GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="5,2" Orientation="Horizontal">
                                        <ui:SymbolIcon
                                            Margin="0,0,8,0"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            Symbol="{Binding Icon}" />

                                        <!--  Normal display mode  -->
                                        <TextBlock
                                            x:Name="DisplayTextBlock"
                                            VerticalAlignment="Center"
                                            FontWeight="{Binding IsFolder, Converter={StaticResource BoolToFontWeightConverter}}"
                                            MouseLeftButtonDown="DisplayTextBlock_MouseLeftButtonDown"
                                            Text="{Binding Name}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsInEditMode}" Value="True">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!--  Edit mode  -->
                                        <TextBox
                                            x:Name="EditTextBox"
                                            KeyDown="EditTextBox_KeyDown"
                                            Loaded="EditTextBox_Loaded"
                                            LostFocus="EditTextBox_LostFocus"
                                            Style="{StaticResource EditTextBoxStyle}"
                                            Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                            Visibility="{Binding IsInEditMode, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ui:GridViewColumn.CellTemplate>
                        </ui:GridViewColumn>
                        <ui:GridViewColumn Width="120" Header="Date Modified">
                            <ui:GridViewColumn.DisplayMemberBinding>
                                <Binding Path="LastUpdated" StringFormat="{}{0:yyyy-MM-dd HH:mm}" />
                            </ui:GridViewColumn.DisplayMemberBinding>
                        </ui:GridViewColumn>
                        <ui:GridViewColumn Width="100" Header="Type">
                            <ui:GridViewColumn.DisplayMemberBinding>
                                <Binding Path="DisplayType" />
                            </ui:GridViewColumn.DisplayMemberBinding>
                        </ui:GridViewColumn>
                        <ui:GridViewColumn Width="100" Header="Size">
                            <ui:GridViewColumn.DisplayMemberBinding>
                                <Binding Path="SizeFormatted" />
                            </ui:GridViewColumn.DisplayMemberBinding>
                        </ui:GridViewColumn>
                    </ui:GridView>
                </ui:ListView.View>
            </ui:ListView>

            <!--  Grid View using ItemsControl to avoid template conflicts  -->
            <ScrollViewer
                x:Name="GridScrollViewer"
                HorizontalScrollBarVisibility="Disabled"
                VerticalScrollBarVisibility="Auto"
                Visibility="Collapsed"
                Background="Transparent"
                MouseRightButtonUp="GridScrollViewer_MouseRightButtonUp">
                <ItemsControl
                    x:Name="BrowserGrid"
                    Focusable="True"
                    ItemContainerStyle="{x:Null}"
                    ItemTemplate="{StaticResource GridViewItemContentTemplate}"
                    MouseDoubleClick="BrowserGridMouseDoubleClick"
                    MouseRightButtonUp="BrowserGrid_MouseRightButtonUp"
                    PreviewKeyDown="BrowserGrid_PreviewKeyDown">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>

            <!--  Progress overlay - now inside BrowserUserControl  -->
            <Border
                x:Name="ProgressOverlay"
                Background="#80000000"
                Opacity=".5"
                Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ui:ProgressRing
                        Width="48"
                        Height="48"
                        IsIndeterminate="True" />
                    <TextBlock
                        x:Name="ProgressText"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        FontSize="14"
                        Foreground="White"
                        Text="Operation in progress..." />
                    <ui:Button
                        x:Name="CancelOperationButton"
                        Width="100"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        Click="CancelOperationButton_Click"
                        Content="Cancel"
                        Icon="{ui:SymbolIcon Symbol=Dismiss20}"
                        ToolTip="Cancel current operation" />
                </StackPanel>
            </Border>

            <!--  Drag and Drop Overlay  -->
            <Border
                x:Name="DragDropOverlay"
                Background="#80000080"
                Opacity=".5"
                Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ui:SymbolIcon
                        FontSize="64"
                        Foreground="White"
                        Symbol="CloudArrowUp24" />
                    <TextBlock
                        x:Name="DragDropText"
                        Margin="0,16,0,0"
                        HorizontalAlignment="Center"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="Drop files and folders here to upload" />
                    <TextBlock
                        x:Name="DragDropSubText"
                        Margin="0,8,0,0"
                        HorizontalAlignment="Center"
                        FontSize="14"
                        Foreground="#E0FFFFFF"
                        Text="Multiple files and folders are supported" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>