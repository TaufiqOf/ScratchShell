<UserControl
    x:Class="ScratchShell.UserControls.SftpUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:browsercontrol="clr-namespace:ScratchShell.UserControls.BrowserControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ScratchShell.UserControls.TerminalControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ProgressBar x:Name="Progress" IsIndeterminate="False" />
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Top toolbar  -->
            <Grid
                x:Name="TopToolbar"
                Grid.Row="0"
                Margin="5"
                VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <ui:Button
                    Grid.Column="0"
                    Margin="2"
                    VerticalAlignment="Stretch"
                    Click="BackButton_Click"
                    FontSize="20"
                    Icon="{ui:SymbolIcon Symbol=ArrowStepBack16}"
                    ToolTip="Back" />
                <ui:Button
                    Grid.Column="1"
                    Margin="2"
                    VerticalAlignment="Stretch"
                    Click="RefreshButton_Click"
                    FontSize="20"
                    Icon="{ui:SymbolIcon Symbol=ArrowRotateClockwise24}"
                    ToolTip="Refresh" />
                <ui:AutoSuggestBox
                    x:Name="PathTextBox"
                    Grid.Column="2"
                    Margin="2"
                    HorizontalAlignment="Stretch"
                    Icon="{ui:FontIcon FontFamily='Segoe Fluent Icons',
                                       Glyph='&#xF08F;'}"
                    KeyDown="PathTextBox_KeyDown" />
                <ToggleButton
                    x:Name="LogToggleButton"
                    Grid.Column="3"
                    Margin="2"
                    VerticalAlignment="Stretch"
                    Checked="LogToggleButtonChecked"
                    FontSize="20"
                    ToolTip="Log"
                    Unchecked="LogToggleButtonUnChecked">
                    <ui:SymbolIcon Symbol="Notebook20" />
                </ToggleButton>
                <!--  Full Screen  -->
                <ui:Button
                    x:Name="FullScreenButton"
                    Grid.Column="4"
                    Margin="2"
                    VerticalAlignment="Stretch"
                    Click="FullScreenButton_Click"
                    FontSize="20"
                    Icon="{ui:SymbolIcon Symbol=FullScreenMaximize20}"
                    ToolTip="Full Screen" />
            </Grid>

            <!--  Browser control  -->
            <ContentControl x:Name="BrowserContentControl" Grid.Row="1" />
        </Grid>
        <Grid
            x:Name="LogGrid"
            Grid.Row="2"
            Height="200"
            Visibility="Collapsed">
            <!--  Terminal  -->
            <local:TerminalUserControl
                x:Name="Terminal"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                IsReadOnly="True" />
        </Grid>
    </Grid>
</UserControl>