<UserControl
    x:Class="ScratchShell.UserControls.SftpUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:browsercontrol="clr-namespace:ScratchShell.UserControls.BrowserControl"
    xmlns:local="clr-namespace:ScratchShell.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:helpers="clr-namespace:ScratchShell.Helpers"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ProgressBar x:Name="Progress" IsIndeterminate="False" />
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Navigation toolbar - Windows Explorer style  -->
            <Grid
                x:Name="TopToolbar"
                Grid.Row="0"
                Margin="5"
                VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Navigation buttons  -->
                <ui:Button
                    x:Name="BackButton"
                    Grid.Column="0"
                    Margin="2"
                    Padding="8,6"
                    VerticalAlignment="Stretch"
                    Click="BackButtonClick"
                    FontSize="16"
                    Icon="{ui:SymbolIcon Symbol=ArrowLeft20}"
                    ToolTip="{helpers:Localized Tooltip_Back}" />

                <ui:Button
                    x:Name="ForwardButton"
                    Grid.Column="1"
                    Margin="2"
                    Padding="8,6"
                    VerticalAlignment="Stretch"
                    Click="ForwardButtonClick"
                    FontSize="16"
                    Icon="{ui:SymbolIcon Symbol=ArrowRight20}"
                    IsEnabled="False"
                    ToolTip="{helpers:Localized Tooltip_Forward}" />

                <ui:Button
                    x:Name="RefreshButton"
                    Grid.Column="2"
                    Margin="2"
                    Padding="8,6"
                    VerticalAlignment="Stretch"
                    Click="RefreshButtonClick"
                    FontSize="16"
                    Icon="{ui:SymbolIcon Symbol=ArrowClockwise20}"
                    ToolTip="{helpers:Localized Tooltip_Refresh}" />

                <ui:Button
                    x:Name="UpButton"
                    Grid.Column="3"
                    Margin="2"
                    Padding="8,6"
                    VerticalAlignment="Stretch"
                    Click="UpButtonClick"
                    FontSize="16"
                    Icon="{ui:SymbolIcon Symbol=FolderArrowUp20}"
                    ToolTip="{helpers:Localized Tooltip_UpOneLevel}" />

                <!--  Address bar  -->
                <local:BreadcrumbAddressBar
                    x:Name="PathAddressBar"
                    Grid.Column="4"
                    Margin="2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" />

                <!--  Create New Folder button  -->
                <ui:Button
                    x:Name="CreateFolderButton"
                    Grid.Column="5"
                    Margin="2"
                    Padding="8,6"
                    VerticalAlignment="Stretch"
                    Click="CreateFolderButtonClick"
                    FontSize="16"
                    Icon="{ui:SymbolIcon Symbol=FolderAdd20}"
                    ToolTip="{helpers:Localized Tooltip_CreateNewFolder}" />

                <!--  Paste button  -->
                <ui:Button
                    x:Name="PasteButton"
                    Grid.Column="6"
                    Margin="2"
                    Padding="8,6"
                    VerticalAlignment="Stretch"
                    Click="PasteButtonClick"
                    FontSize="16"
                    Icon="{ui:SymbolIcon Symbol=ClipboardPaste20}"
                    IsEnabled="False"
                    ToolTip="{helpers:Localized Tooltip_Paste}" />

                <!--  View and utility buttons  -->
                <ui:Button
                    x:Name="OptionsButton"
                    Grid.Column="7"
                    Margin="2"
                    Padding="8,6"
                    VerticalAlignment="Stretch"
                    FontSize="16"
                    Icon="{ui:SymbolIcon Symbol=Options20}"
                    ToolTip="{helpers:Localized Tooltip_ViewOptions}" />

                <ui:Button
                    x:Name="FullScreenButton"
                    Grid.Column="8"
                    Margin="2"
                    Padding="8,6"
                    VerticalAlignment="Stretch"
                    Click="FullScreenButtonClick"
                    FontSize="16"
                    Icon="{ui:SymbolIcon Symbol=FullScreenMaximize20}"
                    ToolTip="{helpers:Localized Tooltip_FullScreenMode}" />

                <!--  Log toggle button moved to the end  -->
                <ToggleButton
                    x:Name="LogToggleButton"
                    Grid.Column="10"
                    Margin="2"
                    Padding="8,6"
                    VerticalAlignment="Stretch"
                    Checked="LogToggleButtonChecked"
                    FontSize="16"
                    ToolTip="{helpers:Localized Tooltip_ShowHideLogPanel}"
                    Unchecked="LogToggleButtonUnChecked">
                    <ui:SymbolIcon Symbol="TextBulletListSquare20" />
                </ToggleButton>
            </Grid>

            <!--  Browser control - progress overlay now handled internally by BrowserUserControl  -->
            <Grid Grid.Row="1" Margin="5,5,5,0">
                <ContentControl x:Name="BrowserContentControl" />
            </Grid>

            <!--  Status bar for selection info  -->
            <Border
                x:Name="SelectionStatusPanel"
                Grid.Row="1"
                Margin="0,0,20,10"
                Padding="8,4"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Visibility="Collapsed">
                <TextBlock
                    x:Name="SelectionStatusText"
                    FontSize="11"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
            </Border>
        </Grid>

        <!--  Log panel  -->
        <Grid
            x:Name="LogGrid"
            Grid.Row="2"
            Height="200"
            Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Log header  -->
            <Border
                Grid.Row="0"
                Padding="10,4"
                Background="LightGray"
                BorderBrush="Gray"
                BorderThickness="0,1,0,1">
                <TextBlock
                    FontSize="12"
                    FontWeight="SemiBold"
                    Text="{helpers:Localized UI_OperationLog}" />
            </Border>

            <!--  Terminal/Log  -->
            <ScrollViewer
                Grid.Row="1"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto">
                <ui:TextBox
                    x:Name="Terminal"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    AcceptsReturn="True"
                    Background="Transparent"
                    BorderThickness="0"
                    FontFamily="Consolas"
                    FontSize="11"
                    IsReadOnly="True"
                    TextWrapping="Wrap" />
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>