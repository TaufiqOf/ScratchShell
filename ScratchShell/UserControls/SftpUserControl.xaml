<UserControl
    x:Class="ScratchShell.UserControls.SftpUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:browsercontrol="clr-namespace:ScratchShell.UserControls.BrowserControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ProgressBar x:Name="Progress" IsIndeterminate="False" />
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Navigation toolbar - Windows Explorer style  -->
            <Grid
                x:Name="TopToolbar"
                Grid.Row="0"
                Margin="5"
                VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <!-- Navigation buttons -->
                <ui:Button
                    Grid.Column="0"
                    Margin="2"
                    Padding="8,6"
                    VerticalAlignment="Stretch"
                    Click="BackButton_Click"
                    FontSize="16"
                    Icon="{ui:SymbolIcon Symbol=ArrowLeft20}"
                    ToolTip="Back (Alt+Left Arrow)" />
                    
                <ui:Button
                    Grid.Column="1"
                    Margin="2"
                    Padding="8,6"
                    VerticalAlignment="Stretch"
                    FontSize="16"
                    Icon="{ui:SymbolIcon Symbol=ArrowRight20}"
                    ToolTip="Forward (Alt+Right Arrow)"
                    IsEnabled="False" />
                    
                <ui:Button
                    Grid.Column="2"
                    Margin="2"
                    Padding="8,6"
                    VerticalAlignment="Stretch"
                    Click="RefreshButton_Click"
                    FontSize="16"
                    Icon="{ui:SymbolIcon Symbol=ArrowClockwise20}"
                    ToolTip="Refresh (F5)" />
                    
                <ui:Button
                    Grid.Column="3"
                    Margin="2"
                    Padding="8,6"
                    VerticalAlignment="Stretch"
                    FontSize="16"
                    Icon="{ui:SymbolIcon Symbol=FolderArrowUp20}"
                    ToolTip="Up one level"
                    Click="BackButton_Click" />

                <!-- Address bar -->
                <ui:AutoSuggestBox
                    x:Name="PathTextBox"
                    Grid.Column="4"
                    Margin="2"
                    HorizontalAlignment="Stretch"
                    Icon="{ui:FontIcon FontFamily='Segoe Fluent Icons',
                                       Glyph='&#xE8B7;'}"
                    KeyDown="PathTextBox_KeyDown"
                    PlaceholderText="Address"
                    ToolTip="Address bar - Type a path or press Enter to navigate" />

                <!-- View and utility buttons -->
                <ToggleButton
                    x:Name="LogToggleButton"
                    Grid.Column="5"
                    Margin="2"
                    Padding="8,6"
                    VerticalAlignment="Stretch"
                    Checked="LogToggleButtonChecked"
                    FontSize="16"
                    ToolTip="Show/hide log panel"
                    Unchecked="LogToggleButtonUnChecked">
                    <ui:SymbolIcon Symbol="TextBulletListSquare20" />
                </ToggleButton>
                
                <ui:Button
                    Grid.Column="6"
                    Margin="2"
                    Padding="8,6"
                    VerticalAlignment="Stretch"
                    FontSize="16"
                    Icon="{ui:SymbolIcon Symbol=Options20}"
                    ToolTip="View options" />
                    
                <ui:Button
                    x:Name="FullScreenButton"
                    Grid.Column="7"
                    Margin="2"
                    Padding="8,6"
                    VerticalAlignment="Stretch"
                    Click="FullScreenButton_Click"
                    FontSize="16"
                    Icon="{ui:SymbolIcon Symbol=FullScreenMaximize20}"
                    ToolTip="Full screen mode" />
            </Grid>

            <!-- Status bar with connection info -->
            <Border 
                Grid.Row="1" 
                Background="{DynamicResource ApplicationBackgroundBrush}"
                BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="10,4">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="CloudArrowDown20" FontSize="14" Margin="0,0,5,0"/>
                    <TextBlock x:Name="ConnectionStatusText" 
                               Text="Connected to server" 
                               FontSize="12"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!--  Browser control  -->
            <ContentControl x:Name="BrowserContentControl" Grid.Row="2" Margin="5,5,5,0" />
        </Grid>
        
        <!-- Log panel -->
        <Grid
            x:Name="LogGrid"
            Grid.Row="2"
            Height="200"
            Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Log header -->
            <Border Grid.Row="0"
                    Background="{DynamicResource ApplicationBackgroundBrush}"
                    BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                    BorderThickness="0,1,0,1"
                    Padding="10,4">
                <TextBlock Text="Connection Log" FontWeight="SemiBold" FontSize="12"/>
            </Border>
            
            <!--  Terminal/Log  -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto">
                <ui:TextBox
                    x:Name="Terminal"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                    IsReadOnly="True"
                    FontFamily="Consolas"
                    FontSize="11"
                    Background="Transparent"
                    BorderThickness="0" />
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>