<UserControl x:Class="ScratchShell.UserControls.GTPTerminalControl.ThemeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ScratchShell.UserControls.GTPTerminalControl"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Margin="10">
        <TextBlock Text="Terminal Theme" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
            <TextBlock Text="Font:" Width="60"/>
            <ComboBox x:Name="FontFamilyComboBox" Width="160" SelectionChanged="FontFamilyComboBox_SelectionChanged"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
            <TextBlock Text="Font Size:" Width="60"/>
            <TextBox x:Name="FontSizeTextBox" Width="60" TextChanged="FontSizeTextBox_TextChanged"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
            <TextBlock Text="Foreground:" Width="60"/>
            <Button x:Name="ForegroundButton" Width="60" Click="ForegroundButton_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
            <TextBlock Text="Background:" Width="60"/>
            <Button x:Name="BackgroundButton" Width="60" Click="BackgroundButton_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
            <TextBlock Text="Selection:" Width="60"/>
            <Button x:Name="SelectionButton" Width="60" Click="SelectionButton_Click"/>
        </StackPanel>
    </StackPanel>
</UserControl>
